<!DOCTYPE html>
<html>
<head>
  <title>Dvrt</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= stylesheet_link_tag    'main', media: 'all' %>
  <%= stylesheet_link_tag    'sass', media: 'all' %>
  <%= stylesheet_link_tag    'ie8', media: 'all' %>
  <%= stylesheet_link_tag    'ie9', media: 'all' %>
  <%= stylesheet_link_tag    '_typography', media: 'all' %>
  <%= stylesheet_link_tag    'font-awesome.min', media: 'all' %>
  <%= stylesheet_link_tag    'font-awesome', media: 'all' %>
  <%= stylesheet_link_tag    'c3', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'jquery.min' %>
  <%= javascript_include_tag 'jquery.scrollex.min' %>
  <%= javascript_include_tag 'main' %>
  <%= javascript_include_tag 'skel.min' %>
  <%= javascript_include_tag 'util' %>
  <%= javascript_include_tag 'jquery.dropotron.min' %>
  <%= javascript_include_tag 'c3' %>
  <%= csrf_meta_tags %>

</head>
<body class="no-sidebar">
  <div id="page-wrapper">

    <!-- Header Wrapper -->
    <div id="header-wrapper">

      <!-- Header -->
      <div id="header" class="container">

        <!-- Nav -->
        <nav id="nav">
          <ul>
            <li><%= link_to "Home", root_path %></li>
            <li>
              <a href="#">Dashboard</a>
              <ul>
                <li><%= link_to "Page 1", one_index_path %></li>
                <li><%= link_to "Page 2", two_index_path %></li>
              </ul>
            </li>
          </ul>
        </nav>

      </div>

    </div>

    <!-- Main Wrapper -->
    <div id="main-wrapper">

      <!-- Main -->
      <div id="page" class="container">

        <!-- Main Heading -->
        <div class="title-heading">
          <div class="1u -10u">
            <%= image_tag "divert.jpg", class: 'image' %>
          </div>
        </div>

        <%= yield %>
        <!-- Copyright -->
        <div id="copyright" class="6u -5u">
          &copy; Divert. All rights reserved.
        </div>

      </div>

      <script type="text/javascript">

    var dataset = [ 5, 10, 15, 20, 25, 30, 35, 40 ];

    d3.select("body").selectAll("p")
      .data(dataset)
      .enter()
      .append("p")
      .attr("class", "bar")
      .style("height", function(d) {
        var barHeight = d * 5;
        return barHeight + "px";
      });

  </script>

    </body>
    </html>
